{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "DevExpress.ExpressApp": "Information"
    }
  },
  "AllowedHosts": "*",
  "DevExpress": {
    "ExpressApp": {
      "EnableDiagnosticActions": false,
      "Languages": "en-US;",
      "ShowLanguageSwitcher": true,
      "ThemeSwitcher": {
        "DefaultItemName": "Roche",
        "ShowSizeModeSwitcher": true,
        "Groups": [
          {
            "Caption": "Themes",
            "Items": [
              {
                "Caption": "Roche",
                "Url": "css/roche_theme.css",
                "Color": "#0B41CD"
              }
            ]
          }
        ]
      }
    }
  }
}