        <script>

            new fullpage('#fullpage', {
                licenseKey: "M1UHH-NP63I-IGOIK-IMN38-VWQQL",
                autoScrolling: true,
                scrollHorizontally: true,
                menu: '#menu',
                anchors: ['1', '2', '3', '4'],
                afterLoad: function (origin, destination, direction) {
                    if (destination.index === 0) {
                        var video = document.getElementById('myVideo');
                        video.currentTime = 0;
                        video.play();
                    }

                    if (destination.index === 2) {
                        var govItems = document.querySelectorAll('.gov-item, .gov-arrow');

                        govItems.forEach(function (item, index) {
                            item.style.opacity = '0';
                            item.style.animation = 'none';
                            void item.offsetWidth;
                            item.style.animation = `fadeInUp 0.4s ease forwards ${0.1 + index * 0.4}s`;
                        });
                    }
                }
            });

        </script>

